{
  "name": "opencode",
  "version": "1.0.0",
  "description": "OpenCode platform configuration",
  "directories": [".opencode", "AGENTS.md"],
  "defaults": {
    "merge": "shallow"
  },
  "transforms": [
    {
      "from": "commands/**",
      "to": ".opencode/commands/**.md",
      "map": {
        "op": "rename",
        "ext": ".md"
      }
    },
    {
      "from": "skills/**",
      "to": ".opencode/skills/**.md",
      "map": {
        "op": "rename",
        "ext": ".md"
      }
    },
    {
      "from": "rules/**",
      "to": ".opencode/rules/**.md",
      "map": {
        "op": "rename",
        "ext": ".md"
      }
    },
    {
      "from": "mcp.jsonc",
      "to": ".opencode/mcp.jsonc",
      "merge": "deep"
    },
    {
      "from": "AGENTS.md",
      "to": "AGENTS.md",
      "merge": "replace"
    },
    {
      "from": "agents/**",
      "to": ".opencode/agents/**.md",
      "map": {
        "op": "rename",
        "ext": ".md"
      }
    }
  ]
}
