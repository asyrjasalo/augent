{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "git *": "deny",
      "rm *": "deny"
    },
    "external_directory": {
      "/tmp/**": "allow",
      "/private/tmp/**": "allow"
    }
  },
  "mcp": {
    "dynamic-mcp": {
      "command": [
        "uvx",
        "dmcp",
        "dynamic-mcp.json"
      ],
      "type": "local"
    }
  },
  "model": "zai-coding-plan/glm-4.7",
  "plugin": [
    "oh-my-opencode",
    "opencode-pty",
    "opencode-scheduler"
  ]
}
